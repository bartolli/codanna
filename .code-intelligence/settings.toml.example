# Codebase Intelligence Configuration
# This is an example configuration file. Copy to settings.toml and customize.
#
# Configuration can be overridden via environment variables:
# - Prefix all variables with CI_
# - Use double underscore (__) to separate nested levels
# - Examples:
#   CI_INDEXING__PARALLEL_THREADS=8
#   CI_MCP__PORT=9999
#   CI_INDEXING__INCLUDE_TESTS=false

version = 1

# Path to the index directory (relative to .code-intelligence/)
index_path = ".code-intelligence/index"

[indexing]
# Number of parallel threads for indexing (defaults to CPU count)
parallel_threads = 8

# Patterns to ignore during indexing
ignore_patterns = [
    "target/**",
    "node_modules/**",
    ".git/**",
    "*.generated.*",
    "vendor/**",
    "build/**",
    "dist/**"
]

# Include test files in the index
include_tests = true

# Include doc comments in the index
include_docs = false

[mcp]
# Port for the MCP server
port = 7777

# Maximum context size in bytes
max_context_size = 100000

# Enable debug logging
debug = false

# Language-specific settings
[languages.rust]
enabled = true
extensions = ["rs"]

[languages.python]
enabled = false
extensions = ["py", "pyi"]

[languages.typescript]
enabled = false
extensions = ["ts", "tsx", "js", "jsx"]

[languages.go]
enabled = false
extensions = ["go"]

[languages.java]
enabled = false
extensions = ["java"]

