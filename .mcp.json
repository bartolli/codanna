{
  "mcpServers": {
    "codanna": {
      "args": [
        "serve",
        "--watch",
        "--watch-interval",
        "5"
      ],
      "command": "codanna"
    },
    "codanna-https": {
      "type": "sse",
      "url": "https://127.0.0.1:8443/mcp/sse"
    },
    "codanna-sse": {
      "type": "sse",
      "url": "http://127.0.0.1:8080/mcp/sse"
    },
    "codanna-stdio": {
      "args": [
        "serve",
        "--watch",
        "--watch-interval",
        "5"
      ],
      "command": "codanna"
    },
    "time": {
      "args": [
        "--directory",
        "/Users/bartolli/Projects/mcp-servers/servers/src/time",
        "run",
        "mcp-server-time",
        "--local-timezone=America/New_York"
      ],
      "command": "/Users/bartolli/.pyenv/shims/uv"
    }
  }
}